
;; https://www.cosy.informatik.uni-bremen.de/sites/default/files/ByrneJohnson-Laird89.pdf
;;
;; (4) John is carrying a vase.
;;     There is a flower in the vase.
;;     Is John carrying a flower?

(time 250)

(instance John Human)

;; wordnet mapping vase to Container

(exists (?C ?V ?F)
  (and
    (instance ?C Carrying)
    (objectTransferred ?C ?V)
    (agent ?C John)
    (instance ?F Flower)
    (instance ?V Container)
    (orientation ?F ?V Inside)))


;; add to SUMO

(=>
  (and (instance ?T Transfer)
       (objectTransferred ?T ?O2)
       (orientation ?O1 ?O2 Inside))
  (objectTransferred ?T ?O1))

;; (=>
;;   (and (instance ?T Transfer)
;;        (objectTransferred ?T ?O1)
;;        (orientation ?O1 ?O2 On))
;;   (objectTransferred ?T ?O2))

(query (and (instance ?C Carrying)
	    (agent ?C John)
	    (instance ?F Flower)
	    (objectTransferred ?C ?F)))

(answer yes)

